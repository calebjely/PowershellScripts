<!DOCTYPE HTML>
<html>

<head>
  <meta charset="utf-8">
  <title>Indexed By Report</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.1/css/theme.grey.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0px auto;
      max-width: 1200px;
    }

    div.div-padding {
      padding: 0px 20px;
    }

    h2 {
      text-align: center;
      margin: 40px 0 20px 0;
    }

    h3 {
      font-weight: normal;
      margin-top: 20px;
    }

    .columns {
      display: flex;
      gap: 20px;
    }

    .column {
      flex: 1;
    }

    table.tablesorter {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th,
    td {
      padding: 8px 12px;
      text-align: left;
    }

    th {
      background-color: #ccc;
      color: #333;
      cursor: pointer;
    }

    tr:nth-child(even) {
      background-color: #eee;
    }

    tr:nth-child(odd) {
      background-color: #fff;
    }

    .total-row td {
      font-weight: bold;
      background-color: #ddd;
    }
  </style>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.1/js/jquery.tablesorter.combined.min.js"></script>
  <script>
    $(function () {
      const includeWeekends = false;

      $(".section").each(function () {
        const heading = $(this).find("h3").text();
        if (!includeWeekends && (heading.startsWith("Saturday") || heading.startsWith("Sunday"))) {
          $(this).hide();
        }
      });

      $("table.tablesorter").each(function () {
        $(this).tablesorter({
          theme: "grey",
          headers: { 1: { sorter: "digit" } },
          sortList: [[1, 1]],
          widgets: ["zebra"]
        });

        let total = 0;
        $(this).find("tbody tr").each(function () {
          const val = parseInt($(this).find("td:eq(1)").text(), 10);
          if (!isNaN(val)) total += val;
        });
        $(this).append(`<tfoot><tr class="total-row"><td>Total</td><td>${total}</td></tr></tfoot>`);
      });
    });
  </script>
</head>

